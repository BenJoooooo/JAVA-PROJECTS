		int num;
		int options = in.nextInt();
		
		switch(options) {
		//String copy
		case 1: System.out.println("String Copy: ");
		num = in.nextInt();
		if (word == "1") {
			System.out.print("String 3: " + word);
		} else if (word1 == "2") System.out.print("String 3: " + word1);
		}
