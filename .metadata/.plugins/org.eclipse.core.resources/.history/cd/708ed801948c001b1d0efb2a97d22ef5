
public class ReturnStatements {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int awesome[] = arrays(3,4,6);
		for (int i = 0; i < awesome.length; i++) {
			System.out.println(awesome[i]);
		}
	}
	public static int[]arrays (int a,int b,int c) {
		int array[] = new int[3];
		array[0] = a;
		array[1] = b;
		array[2] = c;
		return array;
	}
}
